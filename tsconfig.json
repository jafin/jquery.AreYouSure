{
  "compilerOptions": {
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "es6",
    //"module": "system",
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "src/types"],
  },
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
